<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    style="@style/SliderRootLayout"
    android:background="@drawable/back_slide3"
    tools:ignore="SpUsage">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SliderTitle"
        android:text="@string/sliderTitle3" />

    <com.airbnb.lottie.LottieAnimationView
        style="@style/SliderImage"
        app:lottie_rawRes="@raw/slider_chat_3" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SliderDescription"
        android:text="@string/sliderDesc3" />
</LinearLayout>
